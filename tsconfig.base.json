{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@my-org/hooks": ["libs/hooks/src/index.ts"],
      "@my-org/types/todo-types": ["libs/types/todo-types/src/index.ts"],
      "@my-org/ui-shared": ["libs/ui-shared/src/index.ts"],
      "@my-org/utilities": ["libs/utilities/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
